    \begin{beamercolorbox}[
        sep=\beamer@leipzig@blocksep,
        dp=\beamer@leipzig@blockdp,
        leftskip=\beamer@leipzig@blockleftskip,
        rightskip=\beamer@leipzig@blockrightskip,
        vmode
    ]{block body alerted}%
}%
